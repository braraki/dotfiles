# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

# order += "ipv6"
order += "volume master"
# order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPN"
order += "wireless wlan3"
order += "wireless wlan0"
# order += "ethernet eth0"
order += "cpu_usage"
order += "battery 0"
# order += "load"
order += "tztime local"

wireless wlan3 {
        format_up = "WD: %essid (%quality)"
        format_down = "WD: down"
}

wireless wlan0 {
        format_up = "WC: %essid (%quality)"
        format_down = "WC: down"
}

volume master {
  format = " ♪: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

ethernet eth0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining"
}

cpu_usage {
        format = "CPU: %usage"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%d-%m-%Y %H:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
